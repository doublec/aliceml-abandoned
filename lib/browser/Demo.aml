(*** circular lists ***)

val rec a = 1::a;
val b = 5::6::a;
val c = [b,b];

structure CList =  Reflect.ReflectType(type t = int list);
val clist = CList.x;

structure CircList =  Reflect.ReflectType(type t = int list list);
val circlist = CircList.x;

UnsafeInspector.inspect(b,clist);

UnsafeInspector.inspect(c,circlist);

