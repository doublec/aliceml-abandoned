    (* adopted from stockhausen/lib/system/PPValue.aml *)

     fun lookupPath(sign, modLab, typLab) =
	 let
	     val sign' = Inf.asSig(Inf.lookupMod(sign, Label.fromString modLab))
	     val typ   = Inf.lookupTyp'(sign', Label.fromString typLab)
	     val typ'  = if Type.isApply typ 
			     then #1(Type.asApply typ) 
			 else typ
	 in
	     Type.asCon typ'
	 end

    (* newNode *)
    fun newNode (v,t,i,root) = let val va = UnsafeValue.cast v: Reflect.value			 
			       in  createGraph (va,t,Empty,i,0,root)
			       end 

    (* createGraph *)
    and createGraph (va,t,p,i,d,root) = ( (*Window.testIfStop() *) ()
	;if !relmode (* Konstruktion im Relationsmodus *)
	    then let val ind = if p = Empty then i else getAncIndex p 
		     (* 'oberster' Index *)
                     val relman = case 
		     RelMan.lookup(reldict,ind)
			 of SOME x => x (* es existiert bereits ein Relationsmanager *)
		       | NONE => []
		     val desc = createValue(va,t,NO_ACTIONS) 
                     val str = "Ref"^Int.toString(!relnumber)
                     val f = if !tokenmode (* token equality *)
				 then fn x   
				      => if getDesc(x) = INTERPUNCT  
					     then false  
					 else UnsafeValue.same
					     (getValue(getDesc(x)),va)   
			     else (* structural equality *)
				  fn x   
				  => if getDesc(x) = INTERPUNCT  
					 then false  
				     else getValue(getDesc(x)) = va
                    (* Suche, ob der Wert bereits dargestellt worden ist *) 
		 in 
		     (case List.find f relman of   
		      NONE (* erstmalige Darstellung des Wertes, da er noch nicht 
                              dargestellt worden ist *) 
		      => let val node = createRelNode (desc,Empty,p,i,d,
						       str^" as ",
						       relman,root)
			     val c = createUsualGraph (va,t,node,0,d,root) (* rekursiver Aufbau des Inhalts *)
			     val actrelman = case 
				 RelMan.lookup(reldict,ind)
				 of SOME x => x (* gefundene node list im Relationsmanager *)
			          | NONE => []
			 in (setContent (node,c)   
			     ; RelMan.update(reldict,
						       (ind,
						node::actrelman)) 
			     (* Anhaengen der neuen RelNode an den Relationsmanager *)
			     ; node )
			 end     
		    | SOME n (* Wert bereits dargestellt - Referenzbildung *)
		      => let val rep = ( case n of RelNode(rr) => getRep(n) (* z.B. "Ref0 as " *)
		                                 | _ => "_")
			     val str = iterTake rep (* z.B. "Ref0" *)	
			     val m = incrCounter n 
			     val node = 
				 if isSimple (getContent(n))
				     then createUsualGraph (va,t,p,i,d,root)
                                 (* Simples werden _immer_ normal dargestellt *)
				 else 
				     let val ri_rel = 
					 case ReinspectedRel.lookup
					     (ri_reldict,ind) of SOME x => x
					                       | NONE => []
				     in case List.find f ri_rel 
					 of NONE => createRelRefNode (desc,p,i,
								      d,str,m,
								      root)
                                            (* einfache Erzeugung einer RelRefNode *)
				          | SOME no 
                                            (* Knoten gefunden,der gleichen Wert darstellt *) 
					    => if getDesc(no) = desc
					           andalso getParent(no) = p
						   andalso getIndex(no) = i
						   then createRelNode
						        (desc,getContent(n),p,
							 i,d,rep,relman,
							 root)
					       else createRelRefNode
						   (desc,p,i,d,str,m,
						    root)
				     end (* val node *)
			     val actrelman = case 
				 RelMan.lookup(reldict,ind) 
				 of SOME x => x
			          | NONE => []
                             val part = List.partition(fn x => x = n) actrelman
                             (* n wird aus Liste entfernt *)
			     val restlist = #2(part)
			 in (RelMan.update(reldict,
						     (ind,
						      m::restlist))
			     (* n mit erhoehtem counter (=> m) wird an
                                Relationsmanager angehaengt *)
			     ; node)
			 end)
		 end
	else (* kein Relationsmodus *) 
	    createUsualGraph (va,t,p,i,d,root))
	    
    (* createUsualGraph *)
    and createUsualGraph (va,t,p,i,d,root) = 
	let val fut = UnsafeValue.cast va
	in if not(Future.isDetermined(fut))
	       then createFutureNode (va,t,p,i,d,root)
	   else
	   (case Type.inspect t of
	    Type.Con path  (* Pfadtyp *)
	    => let val p_path = 
		   if String.equal(Label.toString(Path.toLab(path)),
				   "package")
		       then lookupPath(packageSign,"Package","package")
		   else if String.equal(Label.toString(Path.toLab(path)),
					"val_package")
			    then lookupPath(packageSign,
					    "Package","val_package")
			else path 
	       in newPath (va,t,p,i,d,p_path,root)
	       end
	   | Type.Arrow _  (* Funktion *)
	     => if d > !max_depth
		    then createLimit (createValue(va,t,NO_ACTIONS),DEPTH_LIMIT,
				      p,i,d,root)
		else createSimple (createValue(va,t,NO_ACTIONS),p,i,d,"fn",
				   DEFAULT,root)
	   | Type.All(var,typ) (* Allquantor *)
	     => createGraph (va,typ,p,i,d,root)
	   | Type.Exist(var,typ)  (* Existenzquantor *)
	     => createGraph (va,typ,p,i,d,root)
	   | Type.Lambda(var,typ) (* Abstraktion *)
	     => raise  createGraph_unknownNode 
           | Type.Apply(t1,t2) 
             => (case unApply (Type.inspect(t)) of 
                 (Type.Con path, ts) (* zusammengesetzter Pfadtyp *) 
		  => let val p_path = 
		         if String.equal(Label.toString(Path.toLab(path)),
					 "promise") (* Promise *)
			     then lookupPath(coreSign,"Promise","promise") 
			 else path 
		     in 
			 newPath (va,t,p,i,d,p_path,root)
		     end 
		| _ => let val typ = #1(Type.asApply(t)) 
		       in if Type.equal(typ,compList) (* Liste *)
			      then let val vv = castList va
				       val listdesc = inspectList(!max_width,
								  vv)
				   in queryDepthL (va,t,p,i,d,listdesc,
						   listdescToNode,root)
				   end
			  else raise createGraph_unknownNode (* unbekannt *)
		       end)  
	   | Type.Prod(row) => queryDepth(va,t,p,i,d,row,treatProd,root) 
	     (* Record *)
	   | Type.Mu(sum) => createGraph (va,sum,p,i,d,root) (* Rekursion *)
	   | Type.Sum(row) => queryDepth(va,t,p,i,d,row,treatSum,root) 
	     (* Datentyp *) 
	   | _ => raise  createGraph_unknownNode  (* unbekannt *) )
	end
		
(* spezielle Behandlung von Listen *)

   (* listdescToNode *)
    and listdescToNode (va,t,p,i,d,ld,root) = 
       case ld of 
	Indet(l,f) 
	=> let val desc = createValue(va,t,NO_ACTIONS)
               val length = List.length l
	       val na = Array.array(length,Empty)
	       val inty = #2(Type.asApply(t))   
	       val cont = createContainer (desc,p,i,d,na,root)
	       val nodearray = listElemArray(l,length,inty,cont,d+1,true,root)
	       val future = createSimple(INTERPUNCT,cont,length,d+1,"_",
                                         DEFAULT,root)
	   in ( Array.update(na,length,future)
	      ; copyArray(nodearray,na)
	      ; cont )
	   end
      | Det(l,b) 
        => let val desc = createValue(va,t,NO_ACTIONS)
	       val length = List.length l
               val na = if b orelse !relmode 
			    then Array.array(length + 1,Empty)
			else Array.array(length,Empty)
	       val inty = #2(Type.asApply(t))   
	   in if b orelse !relmode
		  then let val cont = createContainer (desc,p,i,d,na,root)
			   val nodearray = listElemArray(l,length,inty,cont,
							 d+1,b,root)
			   val last = 
			       if b (* Breitenlimit ueberschritten *)
				   then createLimit (INTERPUNCT,WIDTH_LIMIT,
						     cont,length,d+1,root)
			       else createSimple (INTERPUNCT,cont,length,d+1,
						  "nil",DEFAULT,root)
		       in ( Array.update(na,length,last)
			  ; copyArray(nodearray,na)
			  ; cont )
		       end
	      else let val concat = createConcat(desc,p,i,d,
						 Array.array(3,Empty),root)
 		       val lbra = createSimple (INTERPUNCT,concat,0,d,
						"[",BRACK_COLOR,root)
		       val rbra = createSimple (INTERPUNCT,concat,2,d,
						"]",BRACK_COLOR,root)
		       val cont = createContainer (INTERPUNCT,concat,1,d,
						   na,root)
		       val nodearray = listElemArray(List.take(l,length-1),
						     length-1,inty,cont,d,b,root)
		       val last = let val inva = UnsafeValue.cast(List.last(l))
			                         : Reflect.value
				  in createGraph(inva,inty,cont,length-1,d+1,root)
				  end      	
		   in ( Array.update(na,length-1,last)
                      ; copyArray(nodearray,na)
		      ; Array.update(getKids(concat),0,lbra)
		      ; Array.update(getKids(concat),1,cont)
		      ; Array.update(getKids(concat),2,rbra)
		      ; concat )
		   end
	   end

(* changed on 5. March *) 
 and listElemArray(list,length,listtyp,p,d,b,root) = 
     let 
	 val na = Array.array(length,Empty)
     in
	 (List.appi (fn (i,item) => 
		    let  val concat = createConcat(INTERPUNCT,p,i,d,
					   Array.array(2,Empty),root)
			val inva = UnsafeValue.cast(item)
                            : Reflect.value
			val elem = createGraph(inva,listtyp,concat,0,d+1,root)
			val repr = if b orelse !relmode then "::" else ", "
			val sep = createSimple(INTERPUNCT,
					       concat,1,d,
					       repr,SEP_COLOR,
					       root)
		    in
			( Array.update(getKids(concat),0,elem)
			 ; Array.update(getKids(concat),1,sep)
			 ; Array.update(na,i,concat))
		    end) list;na)
	 end


   
