fun tak(x,y,z) = 
   if y<x then tak(tak(x-1,y,z),tak(y-1,z,x),tak(z-1,x,y))
   else z;

fun cpstakaux(x,y,z,k) = 
   if y<x then
      cpstakaux(x-1,y,z,
		fn(v1)=>
		cpstakaux(y-1,z,x,
			  fn(v2)=>
			  cpstakaux(z-1,x,y,
				    fn(v3)=>cpstakaux(v1,v2,v3,k))))
   else
      k(z);

fun cpstak(x,y,z) = cpstakaux(x,y,z,fn(a)=>a);

