fun sum([],res) = res
  | sum(x::xs,res) = sum(xs,res+x);


fun min([], res) = res
  | min(x::xs, res) =
    let
	val res' = if x < res then x else res
    in
	min(xs, res')
    end

fun avrg(l, len) = sum(l,0) div len;

fun dobenchavrg(n,proc) =
    let 
	val aux = dobenchn(n,proc)
    in
	(avrg(aux,n),aux)
    end

fun dobenchmin(n, proc) =
    case dobenchn(n, proc)
     of rs as (r::rs') => (min(rs', r), rs)
      | _ => raise Subscript
 
