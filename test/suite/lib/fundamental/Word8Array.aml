    fun testApp () =
	let
	    val x1 = ref nil
	    val x2 = ref nil

	    fun f1 x = x1 := (x :: !x1)
	    fun f2 x = x2 := (x :: !x2)
	in
	    Gen.try 10 (Gen.word8Array Gen.word8)
	      (Test.test (fn a => (List.app f1 (Word8Array.toList a);
				   Word8Array.app f2 a;
				    let
					val b = !x1 = !x2
				    in 
					x1 := nil;
					x2 := nil; b
				    end)))
	end

