struct

    val randomize =Gen.randomize

    (* mkRegion (base, right) gives valid region if right = true
       else mkRegions gives wrong region *)
    fun mkRegion (base, right) = 
	let
	    val (r, c) = Array2.dimensions base
	    val row = Gen.cardinal r
	    val col = Gen.cardinal c
	    val nrows = if Gen.bool 1 
			then NONE
			else SOME (Gen.cardinal (r - row))
	    val ncols = if Gen.bool 1
			then NONE
			else SOME (Gen.cardinal (c - col))
	in
	    if right then {base, row, col, nrows, ncols}
	    else if Gen.bool 1
	         then {base, row = row + r + 1, col = col + c + 1,
		       nrows = NONE, ncols = NONE}
	         else {base, row = (~ row) - 1, col = (~ col) - 1,
		       nrows = NONE, ncols = NONE}
	end

    fun twin src = 
	let
	    val (r, c) = Array2.dimensions src
	    val dst = Array2.array (r, c, 0)
	    fun t' (ar1, ar2) (r, c) = 
		if r >= Array2.nRows src
		    then dst
		else if c = Array2.nCols src
			 then t' (src, dst) (r + 1, 0)
		     else (Array2.update (dst, r, c, 
					  Array2.sub (src, r, c));
			   t' (src, dst) (r, c + 1))
	in
	    t' (src, dst) (0, 0)
	end


    fun testCopy () = 
	let
	    fun regionToArray {base, row, col, nrows, ncols} =
		let
		    val nRows = if Option.isNone nrows
				    then Array2.nRows base - row
				else valOf nrows
		    val nCols = if Option.isNone ncols
				    then Array2.nCols base - col
				else valOf ncols
		    val new_base = Array2.array (nRows, nCols, 0)
		    fun t' (ar1, ar2) (r, c) = 
			if r >= nRows
			    then ar2
			else if c = nCols
				 then t' (ar1, ar2) (r + 1, 0)
			     else (Array2.update (ar2, r, c, 
						  Array2.sub (ar1, row + r, 
					 		      col + c));
				   t' (ar1, ar2) (r, c + 1))
		in
		    t' (base, new_base) (0, 0)
		end

	    fun isValid (dst, nrows, ncols, dst_row, dst_col) =
		let
		    val (dst_r, dst_c) = Array2.dimensions dst
		in
		    dst_r >= dst_row + nrows andalso
		    dst_c >= dst_col + ncols
		end

	    val xs = ref nil

	    fun t' (src : int Array2.region, dst, dst_row, dst_col) (r, c) = 
		if isValid (dst, 
			    if Option.isNone (#nrows src)
			    then Array2.nRows (#base src) - (#row src)
			    else valOf (#nrows src), 
			    if Option.isNone (#ncols src)
			    then Array2.nCols (#base src) - (#col src)
			    else valOf (#ncols src), 
			    dst_row, dst_col)
		then 
		    if r >= dst_row
		    then SOME ()
		    else if c = dst_col
		    then t' (src, dst, dst_row, dst_col) (r + 1, 0)
		    else (xs := (r, c, Array2.sub (#base src, 
						   #row src + r,
						   #col src + c)) :: !xs;
			  t' (src, dst, dst_row, dst_col) (r, c + 1))
		else NONE
			  

	    exception Error1
	    exception Error2

	    fun t (base, dest) = 
		let
		    val src = mkRegion (base, true)
		    val src2 = {src where base = twin base}
		    val dst = if Gen.bool 1
				  then regionToArray src (* copy to itself *)
			      else dest
		    val dst2 = twin dst
		    val dst_col = if Option.isNone (#ncols src)
				      then Array2.nCols dst - (#col src)
				  else valOf (#ncols src)
		    val dst_row = if Option.isNone (#nrows src)
				      then Array2.nRows dst - (#row src)
				  else valOf (#nrows src)
		in
		    xs := nil;
		    (if 
		       Option.isSome (t' (src2, dst, dst_row, dst_col)  (0, 0))
		     then (List.app (fn (r, c, a) => 
					Array2.update (dst2, r, c, a)) (!xs);
			   Array2.copy {src, dst, dst_row, dst_col})
			               handle Subscript => raise Error1
		     else (Array2.copy {src, dst, dst_row, dst_col}; 
		           raise Error2) handle Subscript => ());
		    Array2.equal Array2.RowMajor 
		                 Int.equal (dst, dst2)
		end
	in
	    Gen.try 30 (Gen.pair (Gen.array2 Gen.int, Gen.array2 Gen.int))
                                         	    (Test.test t)
	end

    fun testArray () =
	let
	    fun t' (r, c, x, b) = (Array2.array (r, c, x); b) 
			          handle Size => not b


	    fun t (r, c, x) = let 
				  val a = SOME (Array2.array (r, c, x)) 
					   handle Size => NONE
			      in
		                  if Option.isNone a then
				      r < 0 orelse c < 0
				  else (r >= 0 andalso c >= 0 andalso
					Array2.nRows (valOf a) = r andalso
					Array2.nCols (valOf a) = c andalso
					Array2.sub (valOf a, 
						    Int.abs (Gen.int r),
						    Int.abs (Gen.int c)) = x)
				       handle Subscript => r = 0 orelse c = 0
			      end
	in
	    Test.test t' (~2, ~1, 0, false); 
	    Test.test t' (~2,  1, 0, false); 
	    Test.test t' ( 2, ~1, 0, false);
	    Test.test t' ( 2,  1, 0, true);
	    Gen.try 1000 (Gen.triple (Gen.int, Gen.int, Gen.int)) (Test.test t)
	end

