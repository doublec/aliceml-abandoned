	    fun t (sl, csl) = WideCharArraySlice.equal WideChar.equal 
		  ((WideCharArraySlice.rev sl; sl), t' csl)
	in
	    Gen.try 100 (Gen.wideCharArraySlice Gen.wideChar) 
		    (Test.test (fn sl => 
