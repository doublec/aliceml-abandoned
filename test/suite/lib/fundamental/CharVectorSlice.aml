    fun testEqual () = 
	let
	    fun equal' f (a1, a2, i) = 
		if i = CharVectorSlice.length a1 then true
		else if f (CharVectorSlice.sub (a1, i), 
			   CharVectorSlice.sub (a2, i)) 
		     then equal' f (a1, a2, i + 1) else false

	    fun equality f (a1, a2) = (CharVectorSlice.length a1 = 
				       CharVectorSlice.length a2 andalso 
				       equal' f (a1, a2, 0))

	    fun t x = equality Char.equal x =
		      CharVectorSlice.equal Char.equal x
	in 
	    Gen.try 1000 (Gen.pair (Gen.charVectorSlice Gen.char,
				    Gen.charVectorSlice Gen.char)) (Test.test t)
	end

    fun testIsSorted () = 
	let
	    fun t' (f, sl, i) = if (i + 1) >= CharVectorSlice.length sl
			       then true
			       else (case f (CharVectorSlice.sub (sl, i),
					   CharVectorSlice.sub (sl, i + 1)) of
					 EQUAL   => t' (f, sl, i + 1)
				       | LESS    => t' (f, sl, i + 1)
				       | GREATER => false)

	    val f = Char.compare
	    fun t sl = CharVectorSlice.isSorted f sl = t' (f, sl, 0)
	in
	    Gen.try 1000 (Gen.charVectorSlice Gen.char) (Test.test t)
	end

