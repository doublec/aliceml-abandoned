# Last Change:
#   $Date$
#   $Revision$
#

if [ ! -z "$ALICE_REMOTE_PATH" ]
then
    PATH="${ALICE_REMOTE_PATH}:${PATH}"
fi

if [ ! -z "$ALICE_REMOTE_LOG" ]
then
    echo Started: `date` >>/tmp/aliceremote.log
    echo -n alicerun=
    which alicerun >>/tmp/aliceremote.log
    echo argv=$@ >>/tmp/aliceremote.log
    echo PATH=${PATH} >>/tmp/aliceremote.log
fi

alicerun "$@"
RETCODE=$?

if [ ! -z "$ALICE_REMOTE_LOG" ]
then
    echo Completed $RETCODE: `date` >>/tmp/aliceremote.log
fi
