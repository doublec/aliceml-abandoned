#!/bin/sh
# @configure_input@

prefix=@prefix@
exec_prefix=@exec_prefix@
libseam=@libseam@

if [ $# -lt 1 ]; then
    echo "usage: $0 [--verbose|-v] (makedepend|c++|ld) <option> ..." >&2
    exit 2
fi

mode=$1; shift
case "$mode" in
    --verbose|-v)
	verbose=1
	mode=$1; shift
	;;
    *)
	verbose=0
	;;
esac

cmd() {
    if [ "$verbose" -ne 0 ]; then echo "$@"; fi
    "$@" || exit $?
}

case "$mode" in
    makedepend)
	cmd @CXX@ -M @DEFS@ -I@includedir@ @INCLUDES@ @CPPFLAGS@ "$@"
	;;
    c++)
	cmd @CXX@ @DEFS@ -I@includedir@ @INCLUDES@ @CPPFLAGS@ \
	    @CXXFLAGS@ "$@"
	;;
    ld)
	outputfile=""
	ldflags="@LDFLAGS@"
	libs=""
	fileargs=""
	while [ $# -gt 0 ]; do
	    case $1 in
		-o)
		    if [ -z "$outputfile" ]; then
			outputfile="$2"; shift; shift
		    else
			echo $0: option -o given more than once >&2
			exit 2
		    fi
		    ;;
		-s)
		    ldflags="$ldflags $1"; shift
		    ;;
		-l*|-L*|*.dll)
		    libs="$libs $1"; shift
		    ;;
		*)
		    fileargs="$fileargs $1"; shift
		    ;;
	    esac
	done
	cmd @CXX@ -shared $ldflags -o $outputfile $fileargs $libs\
	    -L@libdir@ $libseam
	;;
    *)
	echo $0: unknown mode \`$1\' >&2
	exit 2
	;;
esac

exit 0
